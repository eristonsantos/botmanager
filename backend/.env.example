# ============================================================================
# RPA ORCHESTRATOR - ENVIRONMENT VARIABLES
# ============================================================================
# Copie este arquivo para .env e ajuste os valores

# === API Configuration ===
APP_NAME=RPA Orchestrator API
APP_DESCRIPTION=Plataforma de Orquestração de Automações RPA Multi-Tenant
API_VERSION=v1
DEBUG=True
ENVIRONMENT=development
# Options: development, staging, production

# === Server Configuration ===
HOST=0.0.0.0
PORT=8000

# === Database Configuration ===
DATABASE_URL=postgresql+asyncpg://rpa_admin:rpa_dev_2024@localhost:5432/rpa_orchestrator
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# === Redis Configuration ===
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=True

# === Security Configuration ===
# IMPORTANTE: Gere uma chave segura com pelo menos 32 caracteres
# Você pode gerar com: openssl rand -hex 32
SECRET_KEY=your-secret-key-min-32-chars-change-in-production-please-use-secure-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === CORS Configuration ===
# Separe múltiplas origens com vírgula
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# === Logging Configuration ===
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=text
# Options: json, text

# === Multi-Tenant Configuration ===
DEFAULT_TENANT_ID=default
TENANT_HEADER_NAME=X-Tenant-ID

# === Cache Configuration ===
CACHE_TTL_SECONDS=300
CACHE_ENABLED=True

# === Rate Limiting ===
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=100